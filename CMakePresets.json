{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "installDir": "${sourceDir}/install",
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "linux64-base",
      "inherits": "base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "linux64-debug",
      "inherits": "linux64-base",
      "displayName": "Debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "linux64-release",
      "inherits": "linux64-base",
      "displayName": "Release",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "win64-base",
      "hidden": true,
      "displayName": "Win64",
      "inherits": "base",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "win64-debug",
      "inherits": "win64-base",
      "displayName": "Win64 Debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "win64-release",
      "inherits": "win64-base",
      "displayName": "Win64 Release",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "win64-relwithdebinfo",
      "inherits": "win64-base",
      "displayName": "Win64 RelWithDebInfo",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
    },
    {
      "name": "win64-linux-base",
      "inherits": "win64-base",
      "hidden": true,
      "cacheVariables": { "CMAKE_SYSTEM_NAME": "Linux" }
    },
    {
      "name": "win64-linux-debug",
      "inherits": "win64-linux-base",
      "displayName": "Linux Debug",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Debug" }
    },
    {
      "name": "win64-linux-release",
      "inherits": "win64-linux-base",
      "displayName": "Linux Release",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "win64-linux-relwithdebinfo",
      "inherits": "win64-linux-base",
      "displayName": "Linux RelWithDebInfo",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "RelWithDebInfo" }
    }
  ]
}
